<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />
        <service
                id="bitbag_sylius_mollie_plugin.payment_resolver.mollie_payment_method"
                class="BitBag\SyliusMolliePlugin\Payments\MethodResolver\MolliePaymentMethodResolver"
                decorates="sylius.payment_methods_resolver.default"
        >
            <argument type="service" id="bitbag_sylius_mollie_plugin.payment_resolver.mollie_payment_method.inner" />
            <argument type="service" id="sylius.repository.payment_method" />
            <argument type="service" id="bitbag_sylius_mollie_plugin.resolver.mollie_factory_name" />
            <argument type="service" id="bit_bag.sylius_mollie_plugin.payments.method_resolver.mollie_method_filter"/>
            <tag name="sylius.payment_method_resolver" type="mollie" label="Mollie" priority="2" />
        </service>
    </services>
</container>
