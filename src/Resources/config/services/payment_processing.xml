<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />
        <service id="bitbag_sylius_mollie_plugin.payment_processing.cancel_recurring_subscription" class="BitBag\SyliusMolliePlugin\PaymentProcessing\CancelRecurringSubscriptionProcessor">
            <argument type="service" id="payum"/>
            <argument type="service" id="session"/>
        </service>
        <service id="bitbag_sylius_mollie_plugin.payment_processing.subscription_payment_handler" class="BitBag\SyliusMolliePlugin\PaymentProcessing\SubscriptionPaymentCompletedHandler">
            <argument type="service" id="bitbag_sylius_mollie_plugin.repository.mollie_subscription"/>
            <argument type="service" id="sm.factory"/>
            <argument type="service" id="bitbag.sylius_mollie_plugin.factory.date_periods"/>
            <argument type="service" id="bitbag_sylius_mollie_plugin.custom_factory.mollie_subscription_schedule"/>
        </service>
    </services>
</container>
