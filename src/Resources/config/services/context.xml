<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />
        <service id="bitbag.sylius_mollie_plugin.context.admin.admin_user_context" class="BitBag\SyliusMolliePlugin\Context\Admin\AdminUserContext">
            <argument type="service" id="security.token_storage"/>
        </service>

        <service id="bitbag_sylius_mollie_plugin.context.mollie_resource_based_cart_context"
                class="BitBag\SyliusMolliePlugin\Context\Cart\MollieResourceBasedCartContext"
        >
            <argument type="service" id="request_stack"/>
            <argument type="service" id="bitbag_sylius_mollie_plugin.resolver.order.mollie_resource_order_resolver"/>

            <tag name="sylius.context.cart" priority="-1000" />
        </service>
    </services>
</container>
