<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <mapped-superclass name="BitBag\SyliusMolliePlugin\Entity\MollieSubscriptionSchedule" table="bitbag_mollie_subscription_schedule">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="scheduledDate" nullable="false" type="datetime"/>
        <field name="fulfilledDate" nullable="true" type="datetime"/>
        <field name="scheduleIndex" nullable="false" type="integer"/>

        <many-to-one field="mollieSubscription" target-entity="BitBag\SyliusMolliePlugin\Entity\MollieSubscriptionInterface" inversed-by="schedules">
            <join-column referenced-column-name="id"/>
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
